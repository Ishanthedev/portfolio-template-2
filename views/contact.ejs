<div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10">

        <div class="row" id="buffer-top"></div>

        <div class="row">
            <div class="col-md-4"></div>

            <div class="com-md-4" id="contact-form">
                <form class="feedback-form">
                    <div class="form-group">
                        <label for="feedback-form-name">Name</label>
                        <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="feedback-form-email">E-Mail</label>
                        <input type="text" class="form-control" id="feedback-form-email"
                            placeholder="Enter your email address">
                    </div>
                    <div class="form-group">
                        <label for="feedback-form-title">Title</label>
                        <input type="text" class="form-control" id="feedback-form-title"
                            placeholder="Title of your message">
                    </div>
                    <div class="form-group">
                        <label for="feedback-form-message">Message</label>
                        <textarea type="text" placeholder="Enter your message, then hit the submit button"
                            class="form-control" id="feedback-form-message" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary float-right">Submit</button>
                </form>
            </div>

            <div class="col-md-4"></div>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>